<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/deneme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.MainActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:fontFamily="@font/lobster"
        android:gravity="center_horizontal"
        android:text="@string/main_quote"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-4dp"
        android:layout_marginRight="-3dp"
        android:layout_marginTop="-15dp"
        android:src="@drawable/line_7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView3" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/mainflower"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        app:layout_constraintBottom_toTopOf="@+id/buttonkategori"/>

    <Button
        android:id="@+id/buttonkategori"
        android:layout_width="289dp"
        android:layout_height="51dp"
        android:background="@drawable/buttonmain"
        android:drawableLeft="@drawable/baseline_diamond_24"
        android:paddingLeft="10dp"
        android:shadowDx="0"
        android:shadowDy="0"
        android:text="@string/categoriess"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/buttonnefes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/buttonnefes"
        android:layout_width="289dp"
        android:layout_height="51dp"
        android:background="@drawable/buttonmain"
        android:drawableLeft="@drawable/star_icon"
        android:paddingLeft="10dp"
        android:shadowDx="0"
        android:shadowDy="0"
        android:text="@string/breathing_exercise"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/buttonSettings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="10dp" />
    <Button
        android:id="@+id/buttonSettings"
        android:layout_width="289dp"
        android:layout_height="51dp"
        android:background="@drawable/buttonmain"
        android:drawableLeft="@drawable/settings_icon"
        android:paddingLeft="10dp"
        android:text="@string/introLanguageSelect"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="20dp" />
</androidx.constraintlayout.widget.ConstraintLayout>

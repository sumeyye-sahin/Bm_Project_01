<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbackground4"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="69dp"
        android:text="HOŞGELDİNİZ"
        android:textColor="#B98967"
        android:textSize="22sp"
        android:textStyle="bold"
        android:background="@drawable/welcomebackground"
        android:padding="20dp"
        android:layout_marginTop="150dp"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"

        android:gravity="bottom|center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <Button
            android:id="@+id/button"
            android:layout_width="289dp"
            android:layout_height="52dp"
            android:background="@drawable/buttonmain"
            android:layout_marginBottom="16dp"
            android:text="Genel Olumlamalar"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="289dp"
            android:layout_height="52dp"
            android:background="@drawable/buttonmain"
            android:layout_marginBottom="16dp"
            android:text="Kategoriler"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="289dp"
            android:layout_height="52dp"
            android:background="@drawable/buttonmain"
            android:layout_marginBottom="16dp"
            android:text="Beğenilen Olumlamalar"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18sp"

            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
